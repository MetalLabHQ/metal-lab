---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center gap-3 px-8 py-3 bg-text-primary text-bg-primary text-sm font-mono font-bold tracking-widest uppercase hover:bg-bg-primary hover:text-text-primary border border-transparent hover:border-text-primary transition-all duration-500 group"
>
  {text}
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform duration-500 group-hover:translate-x-1 group-hover:-translate-y-1"><path d="M7 17 17 7"/><path d="M7 7h10v10"/></svg>
</a>
