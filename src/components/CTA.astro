---
import type { Lang } from "../i18n/translations";
import { useTranslations } from "../i18n/utils";
import ReadButton from "./ReadButton.astro";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative py-48 border-t border-border-primary overflow-hidden bg-bg-primary transition-colors duration-500">
  <!-- Dot pattern background -->
  <div class="absolute inset-0 opacity-[0.02] pointer-events-none" 
       style="background-image: radial-gradient(var(--text-primary) 1px, transparent 1px); background-size: 30px 30px;">
  </div>

  <div class="relative z-10 mx-auto max-w-5xl px-6 text-center">
    <h2 class="animate-on-scroll opacity-0 translate-y-8 text-3xl md:text-4xl font-mono font-bold tracking-tighter mb-8 leading-tight text-text-primary transition-colors duration-500">
      {t("cta.heading")}
    </h2>

    <p class="text-lg md:text-xl text-text-secondary mb-12 max-w-xl mx-auto font-light animate-on-scroll opacity-0 translate-y-4 transition-colors duration-500">
      {t("cta.subtitle")}
    </p>

    <div class="animate-on-scroll opacity-0 scale-95">
      <ReadButton text={t("cta.button")} href="https://metal-lab.gitbook.io/metallab" />
    </div>
  </div>
</section>
